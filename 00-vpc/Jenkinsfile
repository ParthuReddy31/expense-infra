pipeline {
    agent { label 'Agent-1' }
    environment { 
        PROJECT = 'Expense'
        COMPONENT = 'Backend'
        ENV = 'prod'
        }
    options { 
        disableConcurrentBuilds() 
        timeout(time: 25, unit: 'MINUTES')
        ansiColor('xterm')
        } 
    parameters {
        choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Pick something')
    }
    stages {
        stage('Terraform-init-&-plan'){
            steps {
                script {
                    withAWS(region: 'us-east-1', credentials: 'AWS-Creds') {
                        sh """
                            cd 00-vpc
                            terraform init --reconfigure
                            terraform plan
                        """
                    }
                }
            }
        }
        stage('Terraform-apply'){
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                script {
                    withAWS(region: 'us-east-1', credentials: 'AWS-Creds') {
                        sh """
                            cd 00-vpc
                            terraform apply -auto-approve
                        """
                    }
                }
            }
        }
        stage('Trigger-SG-Pipeline'){
            when {
                expression { return params.ACTION == 'apply' }
            }
            steps {
                script {
                    build job: 'expense-infra/10-sg', wait: true, parameters: [string(name: 'ACTION', value: "${params.ACTION}")],propagate: false
                }
            }
            
        }
        
    }
    post { 
        always { 
            echo 'I will always say There we go.. Hello again!'
        }
        success {
            echo 'I will say Build-Hello on Success'
        }
        failure {
            echo 'I will say Failure-Hello on Failure'
        }
        // cleanup {
        //     cleanWs() // Deletes the workspace
        // }
    }
}